<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>Monthly Member Sales</title>
</head>
<body>
    <div id="app">
        <div id="header">
            <div id="nav">
                <a href="javascript:history.back()"><h2>Back</h2></a>
            </div>
            <div id="title">
                <h1>Monthly Member Sales</h1>
            </div>
            <div id="menu">
                <div id="menuText">
                    <h2>Menu</h2>
                </div>
            </div>
            <div id="menuOptions">
                <a href="/"><div><p class="mOptionText">Home</p></div></a>
                <a href="/api/users/login"><div><p class="mOptionText">Log In</p></div></a>
            </div>
        </div>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="summary">
                <div class="row">
                    <h2>Monthly Sales Report by Member</h2>
                    <h2>For: <%= month %>, <%= year %></h2>
                    <br>
                </div>
                <div class="columns">
                    <div class="column1">Member</div>
                    <div class="column2">Amount</div>
                </div>
                <div>
                    <hr>
                </div>
                <div class="columns">
                    <% if(salesList !== []){ %>
                        <% for(let i = 0; i < salesList[0].length; i++){ %>
                            <div class="column1">
                                <%= salesList[0][i] %>
                            </div>
                            <div class="column2">
                                $<%= salesList[1][i] %>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="row"><br><br><br></div>
            </div>
        </div>
    </div>
    <script src="/javascripts/main.js"></script>
</body>
</html>