<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>Create Daily Summary</title>
</head>
<body>
    <div id="app">
        <%- include('../partials/header',{nav:"nav", title:"Create Daily Summary", menu:"menu"}) %>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/createDailySummary">
                    <h2 style="text-align: center;">Enter Date</h2>
                    <br>
                    <div class="columns">
                        <div class="membersColumn1">
                            <label for="year">Enter Year</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="text" name="year" id="year">
                        </div>
                        <div class="membersColumn1">
                            <label for="month">Select Month</label>
                        </div>
                        <div class="membersColumn2">
                            <select name="month" id="month">
                                <option value="Jan">Jan</option>
                                <option value="Feb">Feb</option>
                                <option value="Mar">Mar</option>
                                <option value="Apr">Apr</option>
                                <option value="May">May</option>
                                <option value="Jun">Jun</option>
                                <option value="Jul">Jul</option>
                                <option value="Aug">Aug</option>
                                <option value="Sep">Sep</option>
                                <option value="Oct">Oct</option>
                                <option value="Nov">Nov</option>
                                <option value="Dec">Dec</option>
                            </select>
                        </div>
                        <br>
                        <div class="membersColumn1">
                            <label for="day">Select Day</label>
                        </div>
                        <div class="membersColumn2">
                            <select name="day" id="day">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                                <option value="16">16</option>
                                <option value="17">17</option>
                                <option value="18">18</option>
                                <option value="19">19</option>
                                <option value="20">20</option>
                                <option value="21">21</option>
                                <option value="22">22</option>
                                <option value="23">23</option>
                                <option value="24">24</option>
                                <option value="25">25</option>
                                <option value="26">26</option>
                                <option value="27">27</option>
                                <option value="28">28</option>
                                <option value="29">29</option>
                                <option value="30">30</option>
                                <option value="31">31</option>
                            </select>
                        </div>
                        <div class="column1" style="text-align: center;">
                            <button type="submit" id="create">Create</button>
                        </div>
                        <div class="column2" style="text-align: center;">
                            <input type="button" value="Cancel" onclick="window.location.href='/'">
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/main.js"></script>
</body>
</html>