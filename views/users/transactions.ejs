<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>Transactions</title>
</head>
<body>
    <div id="app">
        <div id="header">
            <div id="nav">
                <a href="javascript:history.back()"><h2>Back</h2></a>
            </div>
            <div id="title">
                <h1>Transactions</h1>
            </div>
            <div id="menu">
                <div id="menuText">
                    <h2>Menu</h2>
                </div>
            </div>
            <div id="menuOptions">
                <a href="/"><div><p class="mOptionText">Home</p></div></a>
                <a href="/api/users/login"><div><p class="mOptionText">Log In</p></div></a>
            </div>
        </div>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="form">
                <form role="form" method="POST" action="/api/users/saveTransaction">
                    <h2>New Transaction</h2>
                    <br>
                    <div>
                        <input type="text" name="memberID" id="memberID" value="<%= transaction.memberID %>">
                    </div>
                    <br>
                    <div>
                        <input type="text" name="date" id="date" value="<%= transaction.date %>">
                    </div>
                    <br>
                    <div>
                        <select name="location" id="location">
                            <option value=""></option>
                            <option value="bar">Bar</option>
                            <option value="proShop">Pro Shop</option>
                            <option value="restaurant">Restaurant</option>
                            <option value="tennis/golf lessons">Tennis/golf lessons</option>
                        </select>
                    </div>
                    <br>
                    <div>
                        <input type="text" name="description" id="description" value="<%= transaction.description %>">
                    </div>
                    <br>
                    <div>
                        <input type="text" name="amount" id="amount" value="<%= transaction.amount %>">
                    </div>
                    <br>
                    <hr>
                    <br>
                    <div class="row">
                    <div>
                        <input type="submit" value="Save">
                        <input type="button" value="Cancel" onclick="window.location.href='/'">
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/javascripts/main.js"></script>
</body>
</html>