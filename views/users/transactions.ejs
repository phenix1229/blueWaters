<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>Transactions</title>
</head>
<body>
    <div id="app">
        <%- include('../partials/header',{nav:"nav", title:"Transactions", menu:"menu"}) %>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/findTransactions">
                    <h2 style="text-align: center;">Search For Transactions</h2>
                    <br>
                    <div class="columns">
                        <div class="membersColumn1">
                            <label for="memberEmail">Enter Member Email</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="email" name="memberEmail" id="memberEmail">
                        </div>
                        <div class="membersColumn1">
                            <label for="year">Year</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="text" name="year" id="year">
                        </div>
                        <div class="membersColumn1">
                            <label for="month">Select Month</label>
                        </div>
                        <div class="membersColumn2">
                            <select name="month" id="month">
                                <option value="Jan">Jan</option>
                                <option value="Feb">Feb</option>
                                <option value="Mar">Mar</option>
                                <option value="Apr">Apr</option>
                                <option value="May">May</option>
                                <option value="Jun">Jun</option>
                                <option value="Jul">Jul</option>
                                <option value="Aug">Aug</option>
                                <option value="Sep">Sep</option>
                                <option value="Oct">Oct</option>
                                <option value="Nov">Nov</option>
                                <option value="Dec">Dec</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    <div style="text-align: center;">
                        <button type="submit" id="search">Search</button>
                    </div>
                </form>
            </div>
            <br>
            <div class="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/newTransaction">
                    <div style="text-align: center;">
                        <button type="submit" id="newFee">New Transaction</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/javascripts/main.js"></script>
</body>
</html>