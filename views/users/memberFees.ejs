<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>Member Fees</title>
</head>
<body>
     <div id="app">
        <%- include('../partials/header',{nav:"nav", title:"Member Fees", menu:"menu"}) %>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/findMemberFee">
                    <h2 style="text-align: center;">Search For Fee</h2>
                    <br>
                    <div class="columns">
                        <div class="membersColumn1">
                            <label for="feeType">Enter Fee Type</label>
                        </div>
                        <div class="membersColumn2">
                            <select name="feeType" id="feeType">
                                <% if(feeTypes){ %>
                                    <% feeTypes.forEach(fee => { %>
                                        <option value="<%= fee.membershipType %>"><%= fee.membershipType %></option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <br>
                    <div  style="text-align: center;">
                        <button type="submit" id="search">Search</button>
                    </div>
                </form>
            </div>
            <br>
            <div class="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/newMemberFee">
                    <div style="text-align: center;">
                        <button type="submit" id="newFee">New Fee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<script src="/javascripts/main.js"></script>
</html>