<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/login-register.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/menu.css" type="text/css">
    <title>New Transaction</title>
</head>
<body>
    <div id="app">
        <%- include('../partials/header',{nav:"nav", title:"Transactions", menu:"menu"}) %>
        <div id="main">
            <div id="errorField">
                <% if (error !== null){ %>
                    <p style="color:red; font-size: 20px;"><%= error %> </p>
                <% } %>
            </div>
            <div id="createNewMemberForm">
                <form role="form" method="POST" action="/api/users/saveTransaction">
                    <h2 style="text-align: center;">New Transaction</h2>
                    <br>
                    <div class="columns">
                        <div class="membersColumn1">
                            <label for="memberID">Enter Member Email</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="email" name="memberID" id="memberID" value="<%= transaction.memberID %>">
                        </div>
                        <div class="membersColumn1">
                            <label for="date">Date</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="text" name="date" id="date" value="<%= transaction.date %>">
                        </div>
                        <div class="membersColumn1">
                            <label for="location">Location</label>
                        </div>
                        <div class="membersColumn2">
                            <select name="location" id="location">
                                <option value="bar">Bar</option>
                                <option value="proShop">Pro Shop</option>
                                <option value="restaurant">Restaurant</option>
                                <option value="tennis/golf lessons">Tennis/golf lessons</option>
                            </select>
                        </div>
                        <div class="membersColumn1">
                            <label for="description">Description</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="text" name="description" id="description" value="<%= transaction.description %>">
                        </div>
                        <div class="membersColumn1">
                            <label for="amount">Enter Amount</label>
                        </div>
                        <div class="membersColumn2">
                            <input type="text" name="amount" id="amount" value="<%= transaction.amount %>">
                        </div>
                        <div class="column1" style="text-align: center;">
                            <input type="submit" value="Save">
                        </div>
                        <div class="column2" style="text-align: center;">
                            <input type="button" value="Cancel" onclick="window.location.href='/'">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/javascripts/main.js"></script>
</body>
</html>